<div class="wrapper featuredOrg">
  <% @organizations.each do |organization| %>
    <% link_to organization do %>
      <div class="bucket <%= cycle('left','right') %>">
        <h3><%=h organization.name %></h3>
        <h4><%=h organization.city %> / <%=h organization.country %></h4>
        <p><%= RedCloth.new(organization.needs).to_html %></p>
      </div>
    <% end %>
    <% end %>
  <div class="clear"></div>
</div>

<div class="wrapper actions">
  <a href="#">Share this idea!</a>
  <%= link_to t("organization.register"), new_organization_path, :class => "link" %>  
</div>
