<html>
	<head>
		<title>Let's Help It!</title>
		<link href='http://fonts.googleapis.com/css?family=Reenie+Beanie' rel='stylesheet' type='text/css'>
		<link href='http://fonts.googleapis.com/css?family=Cantarell:regular,italic,bold' rel='stylesheet' type='text/css'>
		<link rel="stylesheet" type="text/css" href="/stylesheets/style.css" />
		<script type="text/javascript" src="/javascripts/search.js"></script>
	</head>
	<body>
		
		<div id="container">
			
			<div id="header">
				<div id="logo">
					<h1>Let's Help It!</h1>
				</div>
				<div id="registration">
					<!-- <%= link_to 'Cadastre sua ONG', new_organization_path %> -->
					
				</div>
			</div>
			
			<div id="subheader">
				<div id="search_area">
					<form id="search_form" name="search_form" method="get" onsubmit="return verify_search()">
						Qual a sua cidade?
						<input id="search_query" type="text" />
						<input id="search" type="submit" value="Let's Help It!" />
					</form>
				</div>
			</div>
			
			<div id="content">
				<div id="organizations">
					<% @organizations.each_with_index do |organization, i| %>
						<div class="organization <%= i.even? ? 'left' : 'right'%>">
							<h2><%= link_to organization.name, organization %></h2>
							<h2><%=h organization.city %></h2>
							<p><%=h organization.needs %></p>
						</div>
					<% end %>
					<!--<%= link_to "LetsHelpIt", organizations_path %>-->
				</div>
			</div>
			
			<div id="footer">
			</div>

		</div>
	</body>
</html>
